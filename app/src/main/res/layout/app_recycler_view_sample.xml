<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_app_recycler_view_sample"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:contentDescription="@string/image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_app_recycler_view_sample"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="marquee"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/image_view_app_recycler_view_sample"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title"
        android:singleLine="true" />

    <TextView
        android:id="@+id/language_app_recycler_view_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/image_view_app_recycler_view_sample"
        app:layout_constraintTop_toBottomOf="@+id/title_app_recycler_view_sample"
        tools:text="Language" />

    <TextView
        android:id="@+id/vote_count_app_recycler_view_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/image_view_app_recycler_view_sample"
        app:layout_constraintTop_toBottomOf="@+id/language_app_recycler_view_sample"
        tools:text="Vote Count" />

    <TextView
        android:id="@+id/release_date_app_recycler_view_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/image_view_app_recycler_view_sample"
        app:layout_constraintTop_toBottomOf="@+id/vote_count_app_recycler_view_sample"
        tools:text="Release Date" />

    <RatingBar
        android:id="@+id/ratingBar_app_recycler_view_sample"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/release_date_app_recycler_view_sample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/release_date_app_recycler_view_sample" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/release_date_app_recycler_view_sample" />

</androidx.constraintlayout.widget.ConstraintLayout>

